[Unit]
Description=Weekly System Backup Timer (Example)
Documentation=file:///opt/backup-system/docs/README.md
Requires=backup-system@system.service

[Timer]
Unit=backup-system@system.service
# Run every Sunday at 02:00 AM
OnCalendar=Sun *-*-* 02:00:00
Persistent=true
RandomizedDelaySec=15min

[Install]
WantedBy=timers.target
